{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "es2019",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "sourceMap": true,
    "allowJs": false,
    "experimentalDecorators": true,
    "baseUrl": "./src",
    "outDir": "./dist",
    "rootDir": "./src",
    "types": [
      "node",
      "jest"
    ],
    "typeRoots": [
      "node",
      "./node_modules/@types",
      "./src/typings"
    ],
  },
  "include": [
    "./src/*.ts",
    "./src/typings/*",
    "src/uses/grayScale.ts",
    "src/uses/sepiaTone.ts",
    "src/uses/backgroundBlur.ts",
    "src/uses/backgroundReplace.ts",
    "src/uses/backgroundColor.ts",
    "src/masks/imageMask.ts",
    "src/composes/toPNG.ts",
    "src/constrains/TargetQuality.ts",
    "src/constrains/LayerIndex.ts",
    "src/constrains/CanvasEdge.ts"
  ],
  "exclude": [
    "jest"
  ],
  "typeAcquisition": {
      "include": [
          "jest",
          "node"
      ]
  }
}