{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "es2019",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "sourceMap": true,
    "allowJs": false,
    "experimentalDecorators": true,
    "baseUrl": "./src",
    "outDir": "./dist",
    "rootDir": "./src",
    "types": [
      "node",
      "jest"
    ],
    "typeRoots": [
      "node",
      "./node_modules/@types",
      "./src/typings"
    ],
  },
  "include": [
    "./src/*.ts",
    "./src/typings/*"
  ],
  "exclude": [
    "jest"
  ],
  "typeAcquisition": {
      "include": [
          "jest",
          "node"
      ]
  }
}